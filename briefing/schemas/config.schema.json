{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BriefingConfig",
  "type": "object",
  "required": [
    "briefing_id",
    "briefing_title",
    "source",
    "processing",
    "summarization",
    "output"
  ],
  "properties": {
    "briefing_id": {
      "type": "string",
      "minLength": 1
    },
    "briefing_title": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "twitter_list",
            "rss",
            "reddit",
            "hackernews"
          ]
        },
        "id": {
          "type": "string"
        },
        "urls": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "subreddits": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sort_by": {
          "type": "string",
          "enum": [
            "hot",
            "new",
            "top",
            "rising"
          ]
        },
        "time_window": {
          "type": "string",
          "enum": [
            "hour",
            "day",
            "week",
            "month",
            "year",
            "all"
          ]
        },
        "limit_per_subreddit": {
          "type": "integer",
          "minimum": 1
        },
        "hn_story_type": {
          "type": "string",
          "enum": [
            "top",
            "new",
            "best"
          ],
          "default": "top"
        },
        "hn_limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 500,
          "default": 50
        }
      },
      "additionalProperties": true
    },
    "processing": {
      "type": "object",
      "required": [
        "time_window_hours",
        "min_cluster_size",
        "sim_near_dup",
        "reranker_model"
      ],
      "properties": {
        "time_window_hours": {
          "type": "integer",
          "minimum": 1
        },
        "dedup": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "fingerprint": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "bits": { "type": "integer", "minimum": 32, "maximum": 128, "default": 64 },
                "bands": { "type": "integer", "minimum": 1, "maximum": 16, "default": 8 },
                "ham_thresh": { "type": "integer", "minimum": 0, "maximum": 16, "default": 3 }
              }
            },
            "semantic": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "threshold": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.92 },
                "ann": { "type": "string", "enum": ["faiss", "numpy"], "default": "faiss" },
                "merge_sources": { "type": "boolean", "default": true }
              }
            }
          }
        },
        "clustering": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "algo": { "type": "string", "enum": ["hdbscan", "kmeans"], "default": "hdbscan" },
            "min_cluster_size": { "type": "integer", "minimum": 2 },
            "k": { "type": "integer", "minimum": 2, "default": 20 },
            "attach_noise": { "type": "boolean", "default": true },
            "labeler": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "mode": { "type": "string", "enum": ["none", "heuristic", "llm"], "default": "none" }
              }
            }
          }
        },
        "rerank": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "strategy": { "type": "string", "enum": ["none", "ce", "mmr", "ce+mmr"], "default": "ce" },
            "lambda": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.4 },
            "model": { "type": "string" }
          }
        },
        "packer": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "budget": { "type": "integer", "minimum": 100, "default": 6000 },
            "per_cluster_min": { "type": "integer", "minimum": 0, "default": 300 },
            "per_cluster_max": { "type": "integer", "minimum": 1, "default": 1200 }
          }
        },
        "min_cluster_size": {
          "type": "integer",
          "minimum": 2
        },
        "sim_near_dup": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "reranker_model": {
          "type": "string",
          "minLength": 1
        },
        "initial_topk": {
          "type": "integer",
          "minimum": 10,
          "default": 1000
        },
        "max_candidates_per_cluster": {
          "type": "integer",
          "minimum": 10,
          "default": 300
        },
        "multi_stage": {
          "type": "boolean",
          "default": false
        },
        "agentic_section": {
          "type": "boolean"
        },
        "brief_lite": {
          "type": "boolean"
        },
        "max_bullets_per_topic": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4,
          "default": 4
        },
        "embedding": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_batch_tokens": {
              "type": "integer",
              "minimum": 1,
              "default": 8192
            },
            "max_item_chars": {
              "type": "integer",
              "minimum": 0,
              "default": 6000
            },
            "chars_per_token": {
              "type": "number",
              "exclusiveMinimum": 0,
              "default": 4.0
            }
          }
        },
        "scoring_weights": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "actionability": {"type": "number"},
            "novelty": {"type": "number"},
            "impact": {"type": "number"},
            "reusability": {"type": "number"},
            "reliability": {"type": "number"},
            "agentic_bonus": {"type": "number"},
            "source_reliability": {"type": "number"}
          }
        },
        "keyword_filter": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "min_score": {
              "type": "number",
              "minimum": 0,
              "default": 0.5
            },
            "top_k": {
              "type": "integer",
              "minimum": 1,
              "default": 500
            },
            "boost_official_sources": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "summarization": {
      "type": "object",
      "required": [
        "llm_provider",
        "prompt_file",
        "target_item_count"
      ],
      "properties": {
        "llm_provider": {
          "type": "string",
          "enum": [
            "gemini",
            "openai"
          ]
        },
        "gemini_model": {
          "type": "string"
        },
        "target_item_count": {
          "type": "integer",
          "minimum": 1
        },
        "openai_model": {
          "type": "string"
        },
        "prompt_file": {
          "type": "string",
          "minLength": 1
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2
        },
        "timeout": {
          "type": "integer",
          "minimum": 1
        },
        "retries": {
          "type": "integer",
          "minimum": 0
        },
        "provider_options": {
          "type": "object",
          "properties": {}
        }
      }
    },
    "output": {
      "type": "object",
      "required": [
        "dir",
        "formats"
      ],
      "properties": {
        "dir": {
          "type": "string",
          "minLength": 1
        },
        "formats": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "md",
              "json",
              "html"
            ]
          }
        },
        "telegram": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "chat_id": {
              "type": "string"
            },
            "parse_mode": {
              "type": "string",
              "enum": [
                "None",
                "Markdown",
                "MarkdownV2",
                "HTML"
              ],
              "default": "HTML"
            },
            "chunk_size": {
              "type": "integer",
              "minimum": 500,
              "maximum": 4096,
              "default": 4096
            },
            "bot_token_env": {
              "type": "string",
              "default": "TELEGRAM_BOT_TOKEN"
            },
            "bot_token": {
              "type": "string"
            },
            "disable_link_preview": {
              "type": "boolean",
              "default": true
            },
            "timeout_sec": {
              "type": "number",
              "minimum": 1,
              "default": 30
            },
            "retries": {
              "type": "integer",
              "minimum": 0,
              "default": 3
            }
          }
        },
        "briefing_archive": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "provider": {
              "type": "string",
              "default": "github"
            },
            "repo": {
              "type": "string"
            },
            "token": {
              "type": "string"
            },
            "token_env": {
              "type": "string",
              "default": "GITHUB_TOKEN"
            },
            "branch": {
              "type": "string",
              "default": "main"
            },
            "commit_message_prefix": {
              "type": "string",
              "default": "briefing"
            },
            "committer_name": {
              "type": "string",
              "default": "ai-briefing"
            },
            "committer_email": {
              "type": "string",
              "default": "noreply@example.com"
            },
            "timeout_sec": {
              "type": "number",
              "minimum": 1,
              "default": 30
            },
            "retries": {
              "type": "integer",
              "minimum": 0,
              "default": 3
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
