{
  "type": "object",
  "required": [
    "title",
    "date",
    "topics"
  ],
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 120
    },
    "date": {
      "type": "string",
      "description": "ISO8601 UTC, e.g. 2025-10-15T00:00:00Z"
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "topic_id",
          "headline",
          "bullets"
        ],
        "properties": {
          "topic_id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "headline": {
            "type": "string",
            "maxLength": 140
          },
          "bullets": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": [
                "text",
                "urls"
              ],
              "properties": {
                "text": {
                  "type": "string",
                  "maxLength": 280
                },
                "urls": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}